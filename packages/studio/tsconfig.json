{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["es2021", "es7", "es6", "dom"],
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "es6",
    "skipLibCheck": true,
    "jsx": "react-jsx"
  },
  "include": [ "src/**/*.ts", "src/**/*.tsx" ],
  "exclude": [ "build", "node_modules" ]
}
